{
  "name": "optimachain",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node convert-images.js && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "blockchain",
    "optimachain",
    "web3"
  ],
  "author": "OptimaChain Team",
  "license": "MIT",
  "description": "OptimaChain - 革新的なスケーリング技術と高度なセキュリティを統合した次世代型分散型ブロックチェーンプラットフォーム",
  "dependencies": {
    "@vitejs/plugin-legacy": "^6.0.2",
    "chart.js": "^4.4.8",
    "three": "^0.174.0",
    "vite": "^6.2.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.9",
    "@jest/globals": "^29.7.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-puppeteer": "^9.0.2",
    "postcss": "^8.5.3",
    "puppeteer": "^22.0.0",
    "tailwindcss": "^4.0.13",
    "vite-plugin-pwa": "^0.21.1"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
